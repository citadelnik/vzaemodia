    <script>
        // --- Скрипт для таймера зворотного відліку ---
        function startCountdown() {
            const countdownElement = document.getElementById('timer');
            if (!countdownElement) return;

            // Встановлюємо кінець відліку на кінець поточного дня
            const now = new Date();
            const endOfDay = new Date(now.getFullYear(), now.getMonth(), now.getDate(), 23, 59, 59, 999);
            
            let timeRemaining = endOfDay.getTime() - now.getTime();

            const interval = setInterval(() => {
                timeRemaining -= 1000;

                if (timeRemaining < 0) {
                    clearInterval(interval);
                    countdownElement.innerHTML = "Акція завершена!";
                    return;
                }

                const hours = Math.floor((timeRemaining / (1000 * 60 * 60)));
                const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

                document.getElementById('hours').textContent = String(hours).padStart(2, '0');
                document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
                document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');

            }, 1000);
        }

        // --- Обробка відправки форми ---
        const form = document.getElementById('consultation-form');
        if (form) {
            form.addEventListener('submit', function(event) {
                event.preventDefault(); // Запобігаємо стандартній відправці
                
                // Тут буде логіка відправки даних на бекенд (наприклад, через fetch)
                // Для демонстрації просто покажемо повідомлення
                
                const submitButton = form.querySelector('button[type="submit"]');
                submitButton.disabled = true;
                submitButton.textContent = 'Відправляємо...';
                
                setTimeout(() => {
                    form.innerHTML = `<div class="text-center">
                        <h3 class="font-montserrat text-2xl font-bold text-green-600">Дякуємо! Ваша заявка прийнята!</h3>
                        <p class="mt-2">Ми зв'яжемося з вами протягом 5 хвилин.</p>
                    </div>`;
                }, 1500);
            });
        }

        // Запуск таймера при завантаженні сторінки
        document.addEventListener('DOMContentLoaded', startCountdown);
    </script>

</body>
</html>
